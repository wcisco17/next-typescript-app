{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "removeComments": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": [
      "dom",
      "es2016"
    ],
  },
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "useBabel": true,
    "reportFiles": [
      "pages/**/*.{ts,tsx}",
      "components/**/*.{ts,tsx}",
    ]
  },
  "compileOnSave": true
}